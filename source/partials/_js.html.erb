    function makePhoto(photo) {
        var li = document.createElement('li');
        var a = document.createElement('a');
        a.href = photo.link;
        a.target = "_blank";
        var img = document.createElement('img');
        img.src = photo.media.m.replace('_m', '_n');
        img.title = photo.title;
        img.alt = photo.alt;
        a.appendChild(img);
        li.appendChild(a);
        return li;
    }


